
#include <stdio.h>
int main()
{
	char x;
	printf ("enter the letter:");
	scanf ("%c",&x);
	if (x=='a')
	{
		printf ("%c is a vowel",x);
	}
	else if (x=='e')
	{
		printf ("%c is a vowel",x);
	}
	else if (x=='i')
	{
		printf ("%c is a vowel",x);
	}
	else if (x=='o')
	{
		printf ("%c is a vowel",x);
	}
	else if (x=='u')
	{
		printf ("%c is a vowel",x);
	}
	else
	{
		printf ("%c is a consonent",x);
	}
	return 0;
}
